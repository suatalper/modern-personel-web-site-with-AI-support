    <script>
      import AOS from "aos";
      import "aos/dist/aos.css";
      import { translations } from "../utils/translations";

      // --- THEME EDITOR LOGIC ---
      function setThemeColor(primary, lightPrimary) {
        document.documentElement.style.setProperty("--color-primary", primary);
        localStorage.setItem("theme-color", primary);
      }
      
      // Explicitly cast window to any to avoid TS errors for custom properties
      (window as any).setThemeColor = setThemeColor;

      // Load saved theme
      const savedTheme = localStorage.getItem("theme-color");
      if (savedTheme) {
        setThemeColor(savedTheme, ""); 
      }

      // --- LANGUAGE LOGIC ---
      let currentLang = localStorage.getItem("lang") || "tr";

      function toggleLanguage() {
        currentLang = currentLang === "tr" ? "en" : "tr";
        localStorage.setItem("lang", currentLang);
        updateLanguage();
      }
      (window as any).toggleLanguage = toggleLanguage;

      function updateLanguage() {
        // Update Toggle Button Visuals
        const flag = currentLang === "tr" ? "tr" : "gb";
        const text = currentLang === "tr" ? "TR" : "EN";
        
        const langFlag = document.getElementById("lang-flag") as HTMLImageElement;
        const langText = document.getElementById("lang-text");
        const langFlagMobile = document.getElementById("lang-flag-mobile") as HTMLImageElement;
        const langTextMobile = document.getElementById("lang-text-mobile");

        if(langFlag) langFlag.src = `https://flagcdn.com/w20/${flag}.png`;
        if(langText) langText.textContent = text;
        if(langFlagMobile) langFlagMobile.src = `https://flagcdn.com/w20/${flag}.png`;
        if(langTextMobile) langTextMobile.textContent = text;

        // Update Text Content
        const elements = document.querySelectorAll("[data-i18n]");
        elements.forEach((el) => {
          const key = el.getAttribute("data-i18n");
          if (key && (translations as any)[currentLang] && (translations as any)[currentLang][key]) {
            if (el.tagName === "INPUT" || el.tagName === "TEXTAREA") {
              (el as HTMLInputElement).placeholder = (translations as any)[currentLang][key];
            } else {
              el.textContent = (translations as any)[currentLang][key];
            }
          }
        });
        
        // Update Options in Select
        const selectOptions = document.querySelectorAll("select[name='subject'] option");
        if(selectOptions.length > 0 && currentLang === 'en') {
             const subjects = ['Freelance Project', 'Internship / Job Opportunity', 'Meeting', 'Other'];
             selectOptions.forEach((opt, idx) => opt.textContent = subjects[idx]);
        } else if (selectOptions.length > 0 && currentLang === 'tr') {
             const subjects = ['Freelance Proje İşi', 'Staj / İş Fırsatı', 'Tanışma', 'Diğer'];
             selectOptions.forEach((opt, idx) => opt.textContent = subjects[idx]);
        }
      }

      // Init Language
      updateLanguage(); 

      // AOS Init
      AOS.init({
        once: true, 
        offset: 50,
        duration: 800,
        easing: "ease-out-cubic",
      });

      // --- LET IT SNOW ---
      const snowBtns = [
        document.getElementById("snow-btn"),
        document.getElementById("snow-btn-mobile"),
      ];
      let isSnowing = false;

      const toggleSnow = () => {
        // Cast window to any to access global snow functions
        const win = window as any;
        if (typeof win.startSnowing !== 'function' || typeof win.stopSnowing !== 'function') return;
        
        if (isSnowing) {
          win.stopSnowing();
          isSnowing = false;
        } else {
          win.startSnowing();
          isSnowing = true;
        }
      };

      snowBtns.forEach((btn) => {
        if (btn) {
          btn.addEventListener("click", toggleSnow);
        }
      });

      // --- DAKTİLO EFEKTİ (TYPEWRITER) ---
      const typewriterElement = document.getElementById("typewriter-text");
      const words = [
        "Öğrenci",
        "Web Geliştirici",
        "Freelancer",
        "Teknoloji Tutkunu",
      ];
      let wordIndex = 0;
      let charIndex = 0;
      let isDeleting = false;
      let typeSpeed = 100;

      function type() {
        if(!typewriterElement) return;
        const currentWord = words[wordIndex];

        if (isDeleting) {
          typewriterElement.textContent = currentWord.substring(
            0,
            charIndex - 1
          );
          charIndex--;
          typeSpeed = 50; 
        } else {
          typewriterElement.textContent = currentWord.substring(
            0,
            charIndex + 1
          );
          charIndex++;
          typeSpeed = 100; 
        }

        if (!isDeleting && charIndex === currentWord.length) {
          isDeleting = true;
          typeSpeed = 2000;
        } else if (isDeleting && charIndex === 0) {
          isDeleting = false;
          wordIndex++;
          if (wordIndex === words.length) {
            wordIndex = 0;
          }
          typeSpeed = 500;
        }

        setTimeout(type, typeSpeed);
      }

      document.addEventListener("DOMContentLoaded", type);

      // --- MOBİL MENÜ MANTIĞI ---
      const menuBtn = document.getElementById("mobile-menu-btn");
      const menu = document.getElementById("mobile-menu");
      
      if(menuBtn && menu) {
        const icon = menuBtn.querySelector("i");
  
        menuBtn.addEventListener("click", () => {
          menu.classList.toggle("hidden");
          if (menu.classList.contains("hidden")) {
            if(icon) {
                icon.classList.remove("fa-xmark");
                icon.classList.add("fa-bars");
            }
          } else {
            if(icon) {
                icon.classList.remove("fa-bars");
                icon.classList.add("fa-xmark");
            }
          }
        });
  
        menu.querySelectorAll("a").forEach((link) => {
          link.addEventListener("click", () => {
            menu.classList.add("hidden");
            if(icon) {
                icon.classList.remove("fa-xmark");
                icon.classList.add("fa-bars");
            }
          });
        });
      }

      // Form Gönderim Simülasyonu
      const form = document.querySelector("form");

      async function handleSubmit(event) {
        event.preventDefault();
        const target = event.target as HTMLFormElement;
        const data = new FormData(target);

        // Ensure form is not null (though event.target is safe here) 
        if (!form) return;

        fetch(target.action, {
          method: form.method,
          body: data,
          headers: {
            Accept: "application/json",
          },
        })
          .then((response) => {
            if (response.ok) {
              showSuccessMessage();
              form.reset();
            } else {
              response.json().then((data) => {
                if (Object.hasOwn(data, "errors")) {
                  alert(
                    data["errors"].map((error: any) => error["message"]).join(", ")
                  );
                } else {
                  alert("Mesaj gönderilirken bir hata oluştu.");
                }
              });
            }
          })
          .catch((error) => {
            alert("Mesaj gönderilirken bir hata oluştu.");
          });
      }
      if(form) form.addEventListener("submit", handleSubmit);
      
      function showSuccessMessage() {
        const toast = document.getElementById("toast");
        if(toast) {
            toast.classList.remove("-translate-y-32");
            setTimeout(() => {
              toast.classList.add("-translate-y-32");
            }, 3000);
        }
      }

      // --- STATS COUNTER & GITHUB STATS ---
      document.addEventListener("DOMContentLoaded", () => {
        const statsSection = document.getElementById("stats-section");
        if (!statsSection) return;

        const animateCount = (el: Element, target: number, duration = 2000) => {
          let start = 0;
          const initialHTML = el.innerHTML;
          const prefix = initialHTML.includes("%") ? "%" : "";
          const suffix = initialHTML.includes("+") ? "+" : "";

          const step = (timestamp: number) => {
            if (!start) start = timestamp;
            const progress = timestamp - start;
            let current = Math.floor(target * (progress / duration));
            current = Math.min(current, target);

            el.innerHTML = `${prefix}${current}${suffix}`;

            if (progress < duration) {
              window.requestAnimationFrame(step);
            } else {
              el.innerHTML = `${prefix}${target}${suffix}`;
            }
          };
          window.requestAnimationFrame(step);
        };

        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                const staticCounters = [
                  document.getElementById("years-of-code"),
                  document.getElementById("learning-motivation"),
                ];
                staticCounters.forEach((counter) => {
                  if (counter) {
                    const targetStr = counter.getAttribute("data-target");
                    if (targetStr) {
                         const target = parseInt(targetStr);
                         animateCount(counter, target);
                    }
                  }
                });

                const personalProjectsEl = document.getElementById("personal-projects");
                if (personalProjectsEl) {
                   const username = "suatalper";
                   fetch(`https://api.github.com/users/${username}`)
                    .then((response) => 
                      response.ok ? response.json() : Promise.reject("API error")
                    )
                    .then((data) => {
                       if (data && typeof data.public_repos !== 'undefined') {
                         animateCount(personalProjectsEl, data.public_repos);
                       } else {
                         const targetStr = personalProjectsEl.getAttribute("data-target");
                         if(targetStr) animateCount(personalProjectsEl, parseInt(targetStr));
                       }
                    })
                    .catch(() => {
                         const targetStr = personalProjectsEl.getAttribute("data-target");
                         if(targetStr) animateCount(personalProjectsEl, parseInt(targetStr));
                    });
                }
                
                const githubStatsEl = document.getElementById("github-stats");
                if (githubStatsEl) {
                  const username = "suatalper";
                  fetch(
                    `https://github-contributions-api.jogruber.de/v4/${username}`
                  )
                    .then((response) =>
                      response.ok
                        ? response.json()
                        : Promise.reject("API error")
                    )
                    .then((data) => {
                      if (data && data.total) {
                        const totalContributions = Object.values(
                          data.total as Record<string, number>
                        ).reduce((a, b) => a + b, 0);
                        animateCount(githubStatsEl, totalContributions);
                      } else {
                        const targetStr = githubStatsEl.getAttribute("data-target");
                        if(targetStr) {
                            animateCount(
                            githubStatsEl,
                            parseInt(targetStr)
                            );
                        }
                      }
                    })
                    .catch(() => {
                        const targetStr = githubStatsEl.getAttribute("data-target");
                        if(targetStr) {
                            animateCount(
                            githubStatsEl,
                            parseInt(targetStr)
                            );
                        }
                    });
                }
                observer.unobserve(statsSection);
              }
            });
          },
          { threshold: 0.2 }
        );

        observer.observe(statsSection);
      });

      // --- KOD EDİTÖRÜ DAKTİLO EFEKTİ ---
      const codeEditor = document.getElementById("code-editor");
      const codeLines = [
        {
          text: "#include <stdio.h>",
          color: "purple",
          indent: 0,
          delayAfter: 200,
        },
        { text: "", indent: 0, delayAfter: 100 },
        { text: "int main() {", color: "purple", indent: 0, delayAfter: 200 },
        {
          text: "// Geleceği kodluyorum...",
          color: "slate",
          indent: 1,
          delayAfter: 300,
        },
        {
          text: 'char *hedef = "Full Stack Developer";',
          color: "green",
          indent: 1,
          delayAfter: 200,
        },
        {
          text: "int motivasyon = 100;",
          color: "amber",
          indent: 1,
          delayAfter: 200,
        },
        { text: "", indent: 0, delayAfter: 100 },
        {
          text: "while (motivasyon > 0) {",
          color: "blue",
          indent: 1,
          delayAfter: 200,
        },
        {
          text: 'learn("Yeni Teknolojiler");',
          color: "green",
          indent: 2,
          delayAfter: 150,
        },
        {
          text: 'build("Projeler");',
          color: "green",
          indent: 2,
          delayAfter: 150,
        },
        { text: "}", indent: 1, delayAfter: 200 },
        { text: "", indent: 0, delayAfter: 100 },
        { text: "return 0;", color: "purple", indent: 1, delayAfter: 200 },
        { text: "}", indent: 0, delayAfter: 500 },
      ];

      let lineIndex = 0;

      function typeCode() {
        if(!codeEditor) return;
        if (lineIndex >= codeLines.length) {
          const cursor = document.createElement("div");
          cursor.className =
            "mt-2 w-2.5 h-5 bg-blue-500 animate-pulse inline-block align-middle";
          codeEditor.appendChild(cursor);
          return;
        }

        const line = codeLines[lineIndex];
        const lineEl = document.createElement("div");
        lineEl.style.paddingLeft = `${line.indent * 1.5}rem`;
        codeEditor.appendChild(lineEl);

        let charIndex = 0;
        function typeChar() {
          if (line.text && charIndex < line.text.length) {
            const char = line.text.charAt(charIndex);
            const span = document.createElement("span");

            if (line.color === "purple") {
              span.className = "text-purple-400";
            } else if (line.color === "green") {
              span.className = "text-green-400";
            } else if (line.color === "amber") {
              span.className = "text-amber-400";
            } else if (line.color === "blue") {
              span.className = "text-blue-400";
            } else if (line.color === "slate") {
              span.className = "text-slate-500 italic";
            } else {
              span.className = "text-slate-300";
            }

            span.textContent = char;
            lineEl.appendChild(span);
            charIndex++;
            setTimeout(typeChar, 15);
          } else {
            lineIndex++;
            setTimeout(typeCode, line.delayAfter || 0);
          }
        }
        typeChar();
      }

      document.addEventListener("DOMContentLoaded", typeCode);

      // --- SCROLL TO TOP BUTTON ---
      const scrollToTopBtn = document.getElementById("scroll-to-top");

      if(scrollToTopBtn) {
        window.addEventListener("scroll", () => {
          if (window.pageYOffset > 300) {
            scrollToTopBtn.classList.remove("hidden");
            scrollToTopBtn.classList.add("flex");
          } else {
            scrollToTopBtn.classList.add("hidden");
            scrollToTopBtn.classList.remove("flex");
          }
        });
  
        scrollToTopBtn.addEventListener("click", () => {
          window.scrollTo({
            top: 0,
            behavior: "smooth",
          });
        });
      }

      // --- DESTEK OL POP-UP ---
      document.addEventListener("DOMContentLoaded", () => {
        const popupOverlay = document.getElementById("popup-overlay");
        const closePopupButton = document.getElementById("close-popup");

        if (!popupOverlay || !closePopupButton) return;

        if (!localStorage.getItem("popupShown")) {
          setTimeout(() => {
            popupOverlay.classList.remove("hidden");
            popupOverlay.classList.add("flex");
            if(typeof (window as any).AOS !== 'undefined') (window as any).AOS.refresh();
          }, 2500);
        }

        const closePopup = () => {
          popupOverlay.classList.add("hidden");
          popupOverlay.classList.remove("flex");
          localStorage.setItem("popupShown", "true");
        };

        closePopupButton.addEventListener("click", closePopup);

        popupOverlay.addEventListener("click", (event) => {
          if (event.target === popupOverlay) {
            closePopup();
          }
        });
      });
    </script>

